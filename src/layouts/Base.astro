---
import "../styles/global.css";
const { title = 'Shooting Quarterly' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} — Shooting Quarterly</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="min-h-screen flex flex-col bg-zinc-50 text-zinc-900 font-sans">
    <header class="bg-white border-b">
      <div class="container mx-auto px-4 py-3 font-medium">
        <a href="/" class="hover:underline">Shooting Quarterly</a>
      </div>
    </header>
    <main class="flex-1 container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-zinc-100 text-center text-xs py-3">
      © {new Date().getFullYear()} Shooting Quarterly
    </footer>
  </body>
</html>