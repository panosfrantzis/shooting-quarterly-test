---
const TITLE = "Book a Session";
const CAL_USERNAME = "panos-frantzis";

// Optional: direct event-type slugs for popup buttons
const CAL_EVENT_SLUGS = [
  { label: "Intro", slug: "panos-frantzis/intro" },
  { label: "1:1 Coaching (60’)", slug: "panos-frantzis/coaching-60" },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{TITLE}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      :root {
        --sq-bg: #ffffff;
        --sq-text: #0f172a;
        --sq-muted: #475569;
        --sq-border: #e5e7eb;
        --sq-card: #ffffff;
        --sq-accent: #0ea5e9;
        --sq-radius: 1.25rem;
      }

      body {
        min-height: 100vh;
        background: var(--sq-bg);
        color: var(--sq-text);
      }

      .sq-container {
        margin: 0 auto;
        max-width: 64rem;
        padding: 2.5rem 1rem;
      }
      .sq-title {
        font-size: clamp(1.75rem, 2vw + 1rem, 2rem);
        font-weight: 600;
        margin-bottom: 1rem;
      }
      .sq-sub {
        margin-bottom: 1.5rem;
        color: var(--sq-muted);
      }
      .sq-card {
        background: var(--sq-card);
        border: 1px solid var(--sq-border);
        border-radius: var(--sq-radius);
      }
      .sq-embed {
        height: 900px;
        width: 100%;
        border: 0;
        display: block;
      }
      .sq-actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin: 1rem 0 0.75rem;
      }
      .sq-btn {
        border: 1px solid var(--sq-border);
        border-radius: 0.75rem;
        padding: 0.5rem 0.75rem;
        background: #fff;
        cursor: pointer;
      }
      .sq-btn:hover {
        border-color: var(--sq-accent);
      }
      .cal-themed {
        --cal-brand: var(--sq-accent);
        --cal-brand-emphasis: var(--sq-accent);
        --cal-text: var(--sq-text);
        --cal-background: var(--sq-card);
        --cal-border: var(--sq-border);
        --cal-secondary: var(--sq-muted);
        --cal-radius: var(--sq-radius);
      }
    </style>
  </head>

  <body>
    <main class="sq-container">
      <h1 class="sq-title">{TITLE}</h1>
      <p class="sq-sub">
        Pick a session and lock your time. You’ll get instant confirmation and reminders.
      </p>

      {CAL_EVENT_SLUGS.length > 0 && (
        <div class="sq-actions">
          {CAL_EVENT_SLUGS.map(({ label, slug }) => (
            <button class="sq-btn" data-cal={slug}>{label}</button>
          ))}
        </div>
      )}

      <section class="sq-card">
        <div id="cal-inline" class="sq-embed cal-themed"></div>
      </section>

      <p class="sq-sub" style="margin-top:0.75rem">
        If the widget doesn’t load, use the direct link:{" "}
        <a href={`https://cal.com/${CAL_USERNAME}`} target="_blank">
          cal.com/{CAL_USERNAME}
        </a>
      </p>

      <script src="https://app.cal.com/embed/embed.js" async></script>
      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const CAL_USERNAME = "panos-frantzis";
          let tries = 0;

          function tryInitCal() {
            if (typeof Cal === "undefined") {
              if (tries++ < 60) return setTimeout(tryInitCal, 100);
              // Fallback to iframe
              document.querySelector("#cal-inline").outerHTML =
                `<iframe src="https://cal.com/${CAL_USERNAME}?hide_title=0" class="sq-embed" loading="lazy"></iframe>`;
              return;
            }

            Cal("init");

            Cal("inline", {
              elementOrSelector: "#cal-inline",
              calLink: CAL_USERNAME,
              layout: "month_view",
            });

            document.querySelectorAll("[data-cal]").forEach((btn) => {
              btn.addEventListener("click", () => {
                Cal("popup", { calLink: btn.dataset.cal });
              });
            });
          }

          tryInitCal();
        });
      </script>
    </main>
  </body>
</html>
