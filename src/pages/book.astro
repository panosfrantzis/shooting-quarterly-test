---
import Base from "../layouts/Base.astro";
const CAL_USERNAME = "panos-frantzis";
---

<Base title="Book a Session">
  <h1 class="text-3xl font-bold mb-4">Book a Session</h1>
  <p class="mb-6">
    Pick a session and lock your time. You’ll receive instant confirmation and
    reminders.
  </p>

  <iframe
    src={`https://cal.com/${CAL_USERNAME}?embed=true&hide_title=1`}
    loading="lazy"
    allowfullscreen
    class="w-full h-[900px] border-0 rounded-xl"
  ></iframe>

  <p class="mt-4 text-sm">
    If the widget doesn’t load, use the direct link:
    <a
      href={`https://cal.com/${CAL_USERNAME}`}
      target="_blank"
      rel="noopener noreferrer"
      class="text-blue-500 underline"
    >
      cal.com/{CAL_USERNAME}
    </a>
  </p>
</Base>
